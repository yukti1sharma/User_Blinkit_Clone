<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.OrderDetailFragment">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TbOrdersDetailFragment"
        android:background="@color/white_yellow"
        app:navigationIcon="@drawable/baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:titleTextColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Order Detail"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1.30dp"
        android:id="@+id/view"
        android:background="#DAD4D4"
        app:layout_constraintTop_toBottomOf="@id/TbOrdersDetailFragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cvOrderStatus"
        android:layout_marginTop="13.00dp"
        android:elevation="0dp"
        app:cardCornerRadius="7.80dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@color/white"
            android:padding="6.50dp">

            <ImageView
                android:layout_width="39.00dp"
                android:layout_height="39.00dp"
                android:layout_gravity="center"
                android:id="@+id/iv1"
                android:background="@drawable/bg_circle"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/baseline_backpack_24"
                app:tint="#DDDDDD" />

            <View
                android:layout_width="52.00dp"
                android:layout_height="5.20dp"
                android:layout_gravity="center_vertical"
                android:background="#6B6464"
                android:id="@+id/view1"/>

            <ImageView
                android:layout_width="39.00dp"
                android:layout_height="39.00dp"
                android:layout_gravity="center"
                android:id="@+id/iv2"
                android:background="@drawable/bg_circle"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/baseline_shopping_bag_24"
                app:tint="#DDDDDD" />

            <View
                android:layout_width="52.00dp"
                android:layout_height="5.20dp"
                android:layout_gravity="center_vertical"
                android:background="#6B6464"
                android:id="@+id/view2"/>

            <ImageView
                android:layout_width="39.00dp"
                android:layout_height="39.00dp"
                android:layout_gravity="center"
                android:id="@+id/iv3"
                android:background="@drawable/bg_circle"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/baseline_local_shipping_24"
                app:tint="#DDDDDD" />

            <View
                android:layout_width="52.00dp"
                android:layout_height="5.20dp"
                android:layout_gravity="center_vertical"
                android:background="#6B6464"
                android:id="@+id/view3"/>

            <ImageView
                android:layout_width="39.00dp"
                android:layout_height="39.00dp"
                android:layout_gravity="center"
                android:id="@+id/iv4"
                android:background="@drawable/bg_circle"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/baseline_done_outline_24"
                app:tint="#DDDDDD" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        app:cardCornerRadius="7.80dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cvOrderStatus"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="13.00dp"
                android:text="Ordered Items"
                android:textColor="@color/black"
                android:textSize="18.20sp"
                android:textStyle="bold"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rvProductItems"
                android:layout_margin="13.00dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>